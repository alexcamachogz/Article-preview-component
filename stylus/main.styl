darkGrayishBlue = #48556a
darkBlue = #6d7f97
grayishBlue = #8a939c
lightGrayishBlue = #d9e6f2

*
	margin 0
	padding 0

body
	background-color #edf2f8
	box-sizing border-box
	font-family 'Manrope', sans-serif;
	font-size 13px

main
	align-items center
	display flex
	flex-direction column
	height 100vh
	justify-content center
	width 100vw

.card
	background-color #FFF
	border-radius 10px
	box-shadow 0px 0px 23px 2px lightGrayishBlue
	display flex
	flex-direction column
	position absolute
	width 90vw
	.card-image
		background url('../images/drawers.jpg') center no-repeat
		background-size cover
		border-top-left-radius 10px
		border-top-right-radius 10px
		width 100%
		height 200px
	.card-content
		display flex
		flex-direction column
		align-items center
		.card-title
			// border 1px solid red
			color darkGrayishBlue
			font-size 15px
			font-weight 700
			letter-spacing 0.4px
			line-height 20px
			margin-top 40px
			width 260px
		.card-text
			// border 1px solid blue
			color grayishBlue
			font-weight 200
			letter-spacing 0.4px
			line-height 20px
			margin-top 20px
			width 260px
	.card-footer
		display grid
		grid-template-columns 1fr 178px 1fr
		margin 0 auto
		margin-top 30px
		padding-bottom 20px
		width 260px
		.card-footer-image
			width 40px
			img
				border-radius 50%
				width inherit
		.card-footer-info
			letter-spacing 0.4px
			p
				color grayishBlue
				font-weight 200
				padding-left 20px
			p:first-child
				color darkGrayishBlue
				font-weight 700
				padding-bottom 8px

.card-footer-share
	padding-top 8px
	cursor pointer
	.card-footer-share--ligth
		background-color #edf2f8
		border-radius 50%
		color darkGrayishBlue
		height 28px
		line-height 30px
		margin 0 auto
		text-align center
		width 28px
	.card-footer-share--dark
		background-color darkBlue
		border-radius 50%
		color #edf2f8
		height 28px
		line-height 30px
		margin 0 auto
		margin-top 8px
		text-align center
		width 28px

.content-footer
	background-color darkGrayishBlue
	border-bottom-left-radius 10px
	border-bottom-right-radius 10px
	color #FFF
	display none
	grid-template-columns 2fr 1fr
	height 70px
	width 90vw
	position relative
	bottom -221px
	// transform: translateY(-70px);
	animation 0.5s blink ease
	&&.active
		display grid
	.social-media
		text-align center
		line-height 70px
		span
			color darkBlue
			letter-spacing 4px
		i
			font-size 16px
			padding 0 5px

@media screen and (min-width: 800px)
	.card
		flex-direction row
		width 670px
		height 270px
		.card-image
			background-position left
			border-top-right-radius 0
			border-bottom-left-radius 10px
			height 100%
			width 265px
		.card-content
			margin 0 auto
			.card-title
				margin-top 30px
				width 290px
			.card-text
				margin-top 15px
				width 290px
		.card-footer
			margin-top 20px
			width 290px
			.card-footer-info
				letter-spacing 0.4px
				p
					padding-left 5px
				p:first-child
					padding-top 5px
					padding-bottom 7px
	
	.card-footer-share--dark
		display none

	.content-footer
		border-radius 10px
		grid-template-columns 1fr
		height 50px
		width 230px
		position relative
		bottom -30px
		left 248px
		&::before
			border-top 15px solid darkGrayishBlue
			border-bottom 15px solid transparent
			border-left 15px solid transparent
			border-right 15px solid transparent
			// border-right 25px solid darkGrayishBlue
			content ''
			display block
			position absolute
			width 0
			top 49px
			left 100px
		.social-media
			line-height 50px

// Mobile: 375px && Desktop: 1440px
@keyframes blink
	0%
		opacity: 0;
	100%
		opacity: 1;